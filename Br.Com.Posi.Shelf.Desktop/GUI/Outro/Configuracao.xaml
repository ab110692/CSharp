            <TextBox x:Name="usuarioTextBox" Grid.Row="7"/>

            <Viewbox HorizontalAlignment="Left" Grid.Row="8">
                <Label x:Name="label4" Content="Senha" />
            </Viewbox>

            <PasswordBox x:Name="senhaTextBox" Grid.Row="9"/>

            <Button x:Name="b_aplicar" Grid.Row="10" Click="b_aplicar_Click" Background="#FF37A437">
                <Viewbox MaxHeight="32">
                    <TextBlock Text="Aplicar"/>
                </Viewbox>
            </Button>

            <Button x:Name="b_fechar" Grid.Row="11" Background="#FFDA4C4C" Click="b_fechar_Click" >
